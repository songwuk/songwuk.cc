---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props;
const isActive = href === Astro.url.pathname.replace(/\/$/, '');
---

<a href={href} class:list={[className, {'underline underline-offset-4 hover:text-emerald-500 decoration-emerald-500': isActive }]} {...props}>
	<slot />
</a>
<style>
	a {
		display: inline-flex;
		align-items: center;
		text-decoration: none;
		gap: 4px
	}
	a.active {
		font-weight: bolder;
		text-decoration: underline;
	}
</style>
