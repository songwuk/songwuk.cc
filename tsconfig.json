{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": [
      "@astrojs/image/client"
    ],
    "paths": {
      "astrojs-i18n": [ // link -types
        "./packages/astrojs-i18n/src/index"
      ],
      "astrojs-i18n/components": [
        "./packages/astrojs-i18n/src/components/index"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/*.md"
  ]
}
